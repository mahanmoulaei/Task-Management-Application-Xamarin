<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MU6_Management_App.Views.EditTaskPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Spacing="15" Padding="5">
            <Entry x:Name="txtTaskID" Text="{Binding ID}" IsEnabled="False"/>
            <Entry x:Name="txtTaskKey" Text="{Binding Key}" IsEnabled="False"/>
            <Entry x:Name="txtTaskDescription" Text="{Binding Description}" Placeholder="Description"/>
            <Picker x:Name="pickerTaskPriority" HorizontalOptions="FillAndExpand"/>
            <Button x:Name="btnEditTask" Text="Edit Task" BackgroundColor="DeepSkyBlue" CornerRadius="10" Clicked="btnEditTask_Clicked"/>
            <Button x:Name="btnCancel" Text="Cancel" BackgroundColor="IndianRed" CornerRadius="10" Clicked="btnCancel_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>