<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MU6_Management_App.Views.NewTaskPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Spacing="15">
            <Entry x:Name="txtTaskDescription" Text="" Placeholder="Description"/>
            <Picker x:Name="pickerTaskPriority" HorizontalOptions="FillAndExpand"/>
            <Button x:Name="btnAddTask" Text="Confirm" BackgroundColor="DeepSkyBlue" CornerRadius="10" Clicked="btnAddTask_Clicked"/>
            <Button x:Name="btnCancel" Text="Cancel" BackgroundColor="IndianRed" CornerRadius="10" Clicked="btnCancel_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>